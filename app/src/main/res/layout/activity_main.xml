<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/layout_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Upload Your Pic"
        android:textColor="@color/red"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_marginTop="20sp"/>


    <ImageView
        android:id="@+id/iv_upload"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_baseline_add_a_photo_24"
        android:background="@drawable/iv_bg"
        android:padding="5dp"/>

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Upload"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/btn_uploaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uploaded Pic"
        android:textAllCaps="false"
        android:layout_below="@id/btn_upload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:backgroundTint="@color/red"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="false"
        android:layout_below="@id/btn_uploaded"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:backgroundTint="@color/red"/>
</RelativeLayout>